<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Document</title>
</head>

<body>

    <button onClick="move()">날리기</button>

</body>

</html>
<script>
    // 거푸집 역할
    class Arrow {

        constructor(y, str, velX) {
            this.y = y;
            this.x = 0;
			this.str = str;
			this.velX = velX;
            this.span = document.createElement("span");
            this.span.innerText = this.str;
            //this.span.id = "sp";  // 제어하기 위한 아이디 부여
            this.span.style.position = "absolute";  // 절대위치로 지정
            this.span.style.top = this.y + "px";  // top에서 얼마나 떨어져있는지, 태어나자마자 y = 150
            this.span.style.left = 0 + "px"; // 태어나자마자 왼쪽으로 붙임  , x = 0
            document.body.appendChild(this.span);
        }
        // jsp 함수정의
        move() {
            // 문서 내 화살 움직임
            //var obj = document.getElementById("sp");
            this.x += this.velX;
            this.span.style.left = this.x + "px";
            setTimeout(() => {
                this.move();
            }, 30);
        }
    }
    var a1 = new Arrow(100, "◆", 10); // 거푸집으로부터 객체 생성
    var a2 = new Arrow(150, "◇", 30);
    var a3 = new Arrow(200, "→", 5);

    a1.move();
    a2.move();
    a3.move();


</script>