<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>포지션을 이용한 물체 조종</title>
<style>
	body{
		margin:0px;
	}
	#bt_up{
		position:absolute;
		left : 100px;
		top:0px;
	}
	#bt_left{
		position:absolute;
		left : 50px;
		top:50px; 
	}
	#bt_down{
		position:absolute;
		left : 100px;
		top:50px; 
	}
	#bt_right{
		position:absolute;
		left : 150px;
		top:50px;
	}
	#pic{ 
		position:absolute;
		left:50px;
		top:200px;
		width:100px;
	}
	#bg {
		background-image:url(../images/back2.png!d);
		width : 2000px;
		height : 1000px;
		
	}
	
</style>
<script>
var x = 50;  // 이미지의 초기위치
var y = 200; // 이미지의 초기위치
var bgx= 0; // 배경 X 좌표 초기값
var r = 0;
function moveUp() {
	y = y -10;
	move();
}
function moveRight() {
	x =x + 10;
	move();
}
function moveLeft() {
	x = x -10;
	move();
}
function moveDown() {
	y =y + 10;
	move();
}
function move() {
		document.getElementById("pic").style.top=y + "px";
		document.getElementById("pic").style.left = x + "px";
	}

	function moveBg() {
		bgx = bgx - 5;
		r += 3;
		document.getElementById("bg").style.backgroundPosition = bgx + "px 0px";
		setTimeout("moveBg()", 100);
		/*document.getElementById("pic").style.transform = "rotate(" + r + "deg)";*/
	
	}


</script>

</head>
<body>

	<button id = "bt_up" onClick = "moveUp()">Up</button>
	<button id = "bt_left"onClick = "moveLeft()">Left</button>
	<button id = "bt_down"onClick = "moveDown()">Down</button>
	<button id = "bt_right" onClick = "moveRight()">Right</button>

	
	<div id = "bg">
	<img src = "../images/game.png" id="pic">	
	</div>
</body>
</html>
<script>
	moveBg();
</script>
